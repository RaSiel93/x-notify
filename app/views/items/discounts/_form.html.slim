= form_for [:items, @advertising] do |f|
  - if @advertising.errors.any?
    #error_explanation
      h2 = pluralize(@advertising.errors.count, "error")
        | prohibited this advertising from being saved:

      ul
      - @advertising.errors.full_messages.each do |msg|
        li = msg

  = f.fields_for :item do |f_item|
    p
      = f_item.label :title
      = f_item.text_field :title

    p
      = f_item.check_box :published
      = f_item.label :published

  p
    = f.label :amount
    = f.text_field :amount

  p
    = f.label :description
    = f.text_field :description

  p = f.submit "Create"
